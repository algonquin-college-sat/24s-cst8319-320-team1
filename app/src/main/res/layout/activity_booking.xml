<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingActivity">

    <TextView
        android:id="@+id/bookingTitle"
        android:layout_width="261dp"
        android:layout_height="39dp"
        android:layout_marginTop="30dp"
        android:text="Book Appointment"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/serviceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Select Service"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/city_spinner"
        app:layout_constraintTop_toBottomOf="@+id/city_spinner" />


    <Spinner
        android:id="@+id/service_spinner"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/serviceLabel"
        app:layout_constraintTop_toBottomOf="@+id/serviceLabel" />

    <TextView
        android:id="@+id/provinceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Select Province"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookingTitle" />

    <Spinner
        android:id="@+id/province_spinner"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/provinceLabel"
        app:layout_constraintTop_toBottomOf="@+id/provinceLabel" />

    <TextView
        android:id="@+id/cityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Select City"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/province_spinner"
        app:layout_constraintTop_toBottomOf="@+id/province_spinner" />

    <Spinner
        android:id="@+id/city_spinner"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/cityLabel"
        app:layout_constraintTop_toBottomOf="@+id/cityLabel" />


    <TextView
        android:id="@+id/clinicLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Select Clinic"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/service_spinner"
        app:layout_constraintTop_toBottomOf="@+id/service_spinner" />

    <Spinner
        android:id="@+id/clinic_spinner"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/clinicLabel"
        app:layout_constraintTop_toBottomOf="@+id/clinicLabel" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="50dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_button" />

</androidx.constraintlayout.widget.ConstraintLayout>