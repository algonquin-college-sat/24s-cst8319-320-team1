<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/pdf_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="View pdf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/image_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="View image"
        app:layout_constraintEnd_toEndOf="@+id/pdf_view_button"
        app:layout_constraintStart_toStartOf="@+id/pdf_view_button"
        app:layout_constraintTop_toBottomOf="@+id/pdf_view_button" />

    <Button
        android:id="@+id/video_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="View video"
        app:layout_constraintEnd_toEndOf="@+id/image_view_button"
        app:layout_constraintStart_toStartOf="@+id/image_view_button"
        app:layout_constraintTop_toBottomOf="@+id/image_view_button" />

    <Button
        android:id="@+id/audio_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="View audio"
        app:layout_constraintEnd_toEndOf="@+id/video_view_button"
        app:layout_constraintStart_toStartOf="@+id/video_view_button"
        app:layout_constraintTop_toBottomOf="@+id/video_view_button" />
</androidx.constraintlayout.widget.ConstraintLayout>